<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">

    <HBox fx:id="bottomPanel" managed="false" visible="false" VBox.vgrow="ALWAYS">

        <VBox fx:id="localVBox" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <Label text="Локальное хранилище" />
            <TableView fx:id="localStorage" editable="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="localFileName" text="Имя файла" />
                    <TableColumn fx:id="localFileSize" text="Размер файла" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox VBox.vgrow="NEVER">
                <Button onAction="#pressLocalSendBtn" text="Отправить файл" />
                <Button onAction="#pressLocalDeleteBtn" text="Удалить файл" />
                <Button onAction="#pressLocalRefreshBtn" text="Обновить" />
            </HBox>

        </VBox>
        <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <Label text="Облачное хранилище" />
            <TableView fx:id="cloudStorage" editable="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="cloudFileName" text="Имя файла" />
                    <TableColumn fx:id="cloudFileSize" text="Размер файла" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox>
                <Button onAction="#pressCloudSendBtn" text="Отправить файл" />
                <Button onAction="#pressCloudDeleteBtn" text="Удалить файл" />
                <Button onAction="#pressCloudRefreshBtn" text="Обновить" />
            </HBox>
        </VBox>
    </HBox>
   <AnchorPane>
      <children>
         <VBox alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
            <children>
                 <HBox>
                     <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="RIGHT_TO_LEFT" text="ЛОГИН">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                     <TextField fx:id="loginField" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" promptText="Логин" />
                 </HBox>
                 <HBox alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
                     <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="RIGHT_TO_LEFT" text="ПАРОЛЬ">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                     <PasswordField fx:id="passwordField" alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#tryToAuth" promptText="Пароль" />
                 </HBox>
               <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                       <Button alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" onAction="#tryToAuth" text="Авторизоваться">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
      <VBox.margin>
         <Insets left="200.0" />
      </VBox.margin>
   </AnchorPane>
</VBox>
